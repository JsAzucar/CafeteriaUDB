<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inicio.InicioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/barra_superior"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#29B6F6"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="@string/toolbar_editar" />

        <Button
            android:id="@+id/btn_editar_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_menu_editar_menu"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:background="@drawable/btn_selector"
            android:backgroundTint="@null"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15sp"
            android:fontFamily="@font/dancingscript_bold"/>

        <Button
            android:id="@+id/btn_editar_plato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_menu_editar_platillos"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:background="@drawable/btn_selector"
            android:backgroundTint="@null"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15sp"
            android:fontFamily="@font/dancingscript_bold"/>



        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_lateral"
        app:headerLayout="@layout/encabezado" />


</androidx.drawerlayout.widget.DrawerLayout>